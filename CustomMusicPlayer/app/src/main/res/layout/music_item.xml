<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_album_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/item_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_album_image"
        android:text="노래 제목"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_singer_name"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="@id/item_album_image"/>

    <TextView
        android:id="@+id/item_singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/item_music_name"
        app:layout_constraintTop_toBottomOf="@id/item_music_name"
        android:text="노래 제목"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_album_image"/>

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_more_button_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="18dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>